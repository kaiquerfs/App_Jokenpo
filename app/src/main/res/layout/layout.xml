<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tela_de_fundo_jokenpo">

        <ImageView
            android:id="@+id/ia"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/pre_selecao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resultado"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/vc"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/pre_selecao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/papel"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:onClick="mudarpapel"
            android:src="@drawable/papel"
            app:layout_constraintBottom_toBottomOf="@+id/pedra"
            app:layout_constraintEnd_toStartOf="@+id/tesoura"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pedra"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:id="@+id/pedra"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:onClick="mudarpedra"
            android:src="@drawable/pedra"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:id="@+id/tesoura"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:onClick="mudartesoura"
            android:src="@drawable/tesoura"
            app:layout_constraintBottom_toBottomOf="@+id/papel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/papel"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/app_nam"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/text_jogada"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/text_vc"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/vc"
            app:layout_constraintStart_toStartOf="@+id/vc"
            app:layout_constraintTop_toBottomOf="@+id/pedra" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/text_ia"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ia"
            app:layout_constraintTop_toBottomOf="@+id/tesoura" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="73dp"
            android:layout_height="94dp"
            android:fontFamily="@font/averia_serif_libre_bold"
            android:text="@string/x"
            android:textSize="90dp"
            app:layout_constraintBottom_toBottomOf="@+id/vc"
            app:layout_constraintEnd_toStartOf="@+id/ia"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toEndOf="@+id/vc"
            app:layout_constraintTop_toTopOf="@+id/vc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>